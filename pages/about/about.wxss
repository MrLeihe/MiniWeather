/* pages/blog/health.wxss */

.about_root{
  background: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.logo{
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #F5F5F5;
  border-radius: 70rpx;
  margin-top: 60rpx;
}

.mini_app_info_text{
  font-size: 28rpx;
  color: #999999;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

.about_divider{
  width: 100%;
  height: 20rpx;
  background-color: #F5F5F5;
}

.navigator_layout{
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: row;
}

/* b3b3b3 */
.navigator_text{
  font-size: 28rpx;
  color: #999999;
  margin-left: 40rpx;
}

.navigator_arrow{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 40rpx;
}

.link_app{
  width: 100%;
  margin-top: 280rpx;
}

.line_root{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.line-wraper{
  width: 38%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.line-css-left{
  width: 90%;
  height: 1rpx;
  margin-left: 40rpx;
  background: #e1e1e1;
  opacity: 0.8;
}

.line-css-right{
  width: 90%;
  height: 1rpx;
  margin-right: 40rpx;
  background: #e1e1e1;
  opacity: 0.8;
}

.link-center{
  width: 24%;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.link-app-layout{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.link-image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.line-app-name{
  font-size: 24rpx;
  color: #666666;
}