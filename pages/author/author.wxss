/* pages/author/author.wxss */

@import '../../common/common.wxss';

.author_root{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.reward_author{
  width: 100%;
  height: 100rpx;
  color: #666666;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
  background: #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.author_wechat_root{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.author_wechat_id{
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
  color: #999999;
}

.author_click{
  color: #68B161;
  font-size: 24rpx;
  border: 2rpx solid #68B161;
  border-radius: 10rpx;
  padding: 5rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
